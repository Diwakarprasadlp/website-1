{% extends "layout.twig" %}

{% block title %}Kanboard Enterprise{% endblock %}
{% block description %}Kanboard on premise with support for companies{% endblock %}

{% block content %}
    <article id="managed-hosting">
        <h1>Kanboard Enterprise</h1>

        <p class="alert">Kanboard Enterprise is not ready yet, however custom developments is possible.</p>

        <form id="newsletter" method="post" action="/subscribe/enterprise">
            <h3>Are you interested by Kanboard Enterprise?</h3>
            <input type="email" name="email" required placeholder="Enter your email address">
            <input type="submit" value="Yes, keep me in touch" class="btn btn-blue">
            <p>We will never spam and your privacy is guaranteed.</p>
        </form>

        <div class="big-button">
            <a href="/consulting">Custom Kanboard Developments</a>
        </div>
    </article>
{% endblock %}
